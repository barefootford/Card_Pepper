
<h4 class='head-with-author'><%= deck.title %></h4>

<small><%= link_to "#{deck.user.name} ", user_path(deck.user), class: '' %>|</small>
<small><%= link_to "Edit | ", edit_deck_path(deck), class: 'no-link-primary' if deck.user == current_user %></small>
<small><%= link_to "View | ", deck_path(deck), class: 'no-link-primary' %></small>
<%= content_tag :small, "#{pluralize(deck.cards.count, 'card')} |", class:'a', id:'card-count-label' %>
<%= content_tag :small, pluralize(deck.card_suggestions.approved.count, 'contribution'), class:'' %>