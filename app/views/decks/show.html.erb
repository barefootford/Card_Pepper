<div class='row'>
  <div class='col-md-6'>
    <h3><%= @deck.title %></h3>

    <h3>Chapters</h3>

    <% if @deck.chapters.any? %>
      <ol>
        <% @deck.chapters.each do |chapter| %>
        <li draggable="true">
          <span class='btn btn-xs btn-primary mhm btn-danger'>X</span>
          <!-- <span class='btn btn-xs btn-primary mhm btn-primary'>E</span> -->
          <%= link_to chapter.title, chapter %>
        </li>
        <% end %>
      </ol>
    <% end %>

    <br>
    <br>
    <%# if current_user && current_user.id == @deck.user.id %>
      <%#= link_to "Delete Deck", deck_path, method: :delete, data: { confirm: 'Are you sure you want to delete this deck? This cannot be un done.' } %>
    <%# end %>

  </div>
</div>