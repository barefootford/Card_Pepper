<div id='deck-settings-form' class='hideable hidden'>
  <%= form_for @deck do |f| %>
    <small>Title:</small>
    <%= f.text_area :title, class:'form-control', rows:1 %>
    <small>Instructions:</small>
    <%= f.text_area :instructions, placeholder:"Instructions make decks more valuable by showing how to use them.", class:'form-control', rows:6 %>
    <br>
    <%= f.submit ("Save"), class:'btn btn-block btn-primary', id:'save-deck' %>
    <br>
    
    <% if current_user && @deck.user == current_user %>
      <%= link_to 'Delete Deck', deck_path, method: :delete, data: { confirm: 'Are you *sure* you want to delete this deck?' }, class:'btn btn-block btn-default' %><br>
    <% end %>
  <% end %>
</div>
