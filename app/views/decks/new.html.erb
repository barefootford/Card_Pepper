<div class='row'>
  <div class='col-md-6'>
    <h1>Let's build a deck.</h1>
    <p class='lead'>First, give it a title:</p>  
    <%= form_for @deck do |f| %>
      <%= f.text_area :title, placeholder:'Michel Thomas Beginner Spanish', class:'form-control', rows:1 %>
      <br>
      <%= f.submit "Build It", class:'btn btn-lg btn-block btn-primary' %>
      <br>
    <% end %>
  </div>
</div>