<%= render 'shared/errors', object: @card %>

<h4>Add a Card:</h4>
<%= form_for [@deck.chapters.first, @new_card] do |f| %>  
  
  <small>Question:</small>
  <%= f.text_area :question, placeholder:'Question',
  rows:1, class:'form-control', id:'card-question' %>

  <small>Answer:</small>
  <%= f.text_area :answer, placeholder:'Answer', rows:1, class:'form-control', id:'card-answer', prompt: true %>
  
  <small>Select a chapter:</small><br>
  <%= collection_select :card, :chapter_id, @deck.chapters, :id, :title %>

    <%= f.submit "Save Card", class:"btn btn-block btn-primary", id:'save-card-suggestion' %>
    <br>
<% end %>
<br>