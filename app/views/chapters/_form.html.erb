<%= form_for [@deck, @chapter] do |f| %>
  <div class='col-md-6'>
    <small>Add a New Chapter:</small>
    <br>
  </div>
  <div class='col-md-5'>
    <%= f.text_area :title, placeholder:'Spanish verbs that end in "r"', rows:1, class:'form-control' %>
  </div>
  <div class='col-md-1'>
    <span><%= f.submit "Save", class:'span btn btn-md btn-primary' %></span>
  </div>
<% end %>