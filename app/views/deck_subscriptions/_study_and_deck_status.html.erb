<div id='study-button'>
  <% if @deck_subscription.status == 'active' %>
    <%= link_to 'Study', deck_subscription_study_sessions_path(@deck_subscription),
          method: :post, class:'btn btn-primary btn-lg btn-block' %>
    <%= link_to 'Archive Deck Subscription', deck_subscription_path(@deck_subscription, status: 'archived'), remote: true, method: :patch, class:'label label-default deck-status' %>

  <% elsif @deck_subscription.status == 'archived' %>
    <%= link_to 'Reactivate to Study', deck_subscription_study_sessions_path(@deck_subscription),
          method: :post, class:'btn btn-default btn-lg btn-block disabled' %>
    <%= link_to 'Reactivate Deck Subscription', deck_subscription_path(@deck_subscription, status: 'active'), remote: true, method: :patch, class:'label label-primary deck-status' %>
  <% end %>
  <%= link_to 'View Deck', deck_path(@deck), class:'label label-default' %>
</div>